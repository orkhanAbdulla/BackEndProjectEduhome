@model List<Course>

@foreach (Course cr in Model)
{
    <div class="col-md-4 col-sm-6 col-xs-12">
        <div class="single-course mb-70">
            <div class="course-img">
                <a asp-controller="Courses" asp-action="Detail" asp-route-Id="@cr.Id">
                    <img src="img/course/@cr.ImageUrl" alt="course">
                    <div class="course-hover">
                        <i class="fa fa-link"></i>
                    </div>
                </a>
            </div>
            <div class="course-content">
                <h3><a href="course-details.html">@cr.Name</a></h3>
                <p>@((cr.Description.Length<30)?cr.Description:cr.Description.Substring(0,111))</p>
                <a class="default-btn" asp-controller="Courses" asp-action="Detail" asp-route-Id="@cr.Id">read more</a>
            </div>
        </div>
    </div>
}
