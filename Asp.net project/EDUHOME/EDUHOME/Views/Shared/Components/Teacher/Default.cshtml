@model List<Teacher>


@foreach (Teacher tr in Model)
{
    <div class="col-md-3 col-sm-4 col-xs-12">
        <div class="single-teacher mb-45">
            <div class="single-teacher-img">
                <a asp-controller="Teacher" asp-action="Detail" asp-route-id="@tr.Id"><img src="img/teacher/@tr.ImageUrl" alt="teacher"></a>
            </div>
            <div class="single-teacher-content text-center">
                <h2><a href="teacher-details.html">@tr.Fullname</a></h2>
                <h4>@tr.Position</h4>
                <ul>
                    @foreach (TeacherSocial tc in tr.TeacherSocials)
                    {
                        <li><a href="@tc.Social.Link"><i class="@tc.Social.Icon"></i></a></li>
                    }


                </ul>
            </div>
        </div>
    </div>
}