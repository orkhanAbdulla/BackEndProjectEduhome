@model List<Teacher>
@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card ">
        <div class="card ">
            <div class="card-body ">
                <h4 class="card-title">Teachers</h4>
                <a asp-controller="SocialMedia" asp-action="Create" class="btn btn-success">Create</a>
                <div class="table-responsive">
                    <table class="table table-striped ">
                        <thead>
                            <tr>
                                <th>
                                    Image
                                </th>
                                <th>
                                    Fullname
                                </th>
                                <th>
                                    Settings
                                </th>

                            </tr>

                        </thead>
                        <tbody>
                            @foreach (Teacher t in Model)
                            {
                                <tr>
                                    <td>
                                        <img style="width: 100px; height: 100px; object-fit:cover" src="~/img/teacher/@t.ImageUrl" a />
                                    </td>
                                    <td>
                                        @t.Fullname
                                    </td>
                                    <td>
                                        <!-- Button trigger modal -->
                                        <button type="button" class="btn btn-secondary" data-toggle="modal" data-target="#speaker-@t.Id">
                                            Contact INFO
                                        </button>

                                        <!-- Modal -->
                                        <div class="modal fade" id="speaker-@t.Id" tabindex="-1" role="dialog" aria-labelledby="speaker-@t.Id" aria-hidden="true">
                                            <div class="modal-dialog modal-dialog-centered" role="document">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title" id="exampleModalLongTitle">Modal title</h5>
                                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                            <span aria-hidden="true">&times;</span>
                                                        </button>
                                                    </div>
                                                    <div class="modal-body">
                                                        
                                                            @foreach (Social tc in t.socials)
                                                            {
                                                                <a class="icon-asd" href="@tc.Link"><i class="@tc.Icon "></i></a>
                                                            }


                                                       
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                                        <button type="button" class="btn btn-primary">Save changes</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>


                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>









