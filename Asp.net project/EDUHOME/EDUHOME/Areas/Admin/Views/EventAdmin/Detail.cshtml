@model Event
@{
    ViewData["Title"] = "Detail";
}
<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card ">
            <div class="card-body">
                <a asp-controller="EventAdmin" asp-action="Index" class="btn btn-secondary">Go Back</a>
                <div class="table-responsive">
                    <table class="table table-striped ">
                        <thead>
                            <tr>
                                <th>
                                    Image
                                </th>
                                <th>
                                    Description
                                </th>
                                <th>
                                    Event
                                </th>
                                <th>
                                    Time
                                </th>
                                <th>
                                    Venue
                                </th>
                                <th>
                                    Speakers
                                </th>
                                <th>
                                    Settings
                                </th>

                            </tr>

                        </thead>
                        <tbody>
                            <tr>
                                <td>
                                    <img style="width: 150px; height: 150px; object-fit:cover" src="~/img/event/@Model.ImageUrl" a />
                                </td>
                                <td>
                                    <!-- Button trigger modal -->
                                    <button type="button" class="btn btn-secondary" data-toggle="modal" data-target="#exampleModalLong">
                                        Click for Description
                                    </button>

                                    <!-- Modal -->
                                    <div class="modal fade" id="exampleModalLong" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
                                        <div class="modal-dialog" role="document">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title" id="exampleModalLongTitle">Modal title</h5>
                                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                        <span aria-hidden="true">&times;</span>
                                                    </button>
                                                </div>
                                                <div class="modal-body">
                                                    @Html.Raw(Model.EventDetail.Description)
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                                    <button type="button" class="btn btn-primary">Save changes</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <h5>@Model.Lesson</h5>
                                </td>
                                <td>
                                    <h5> @Model.EventTime.ToString("dd") @Model.EventTime.ToString("MMM") @Model.EventTime.ToString("t") - @Model.EventEndTime.ToString("t")</h5>
                                </td>
                                <td>
                                    <!-- Button trigger modal -->
                                    <button type="button" class="btn btn-secondary" data-toggle="modal" data-target="#exampleModalCenter">
                                        Click for Venue
                                    </button>

                                    <!-- Modal -->
                                    <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                                        <div class="modal-dialog modal-dialog-centered" role="document">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title" id="exampleModalLongTitle">Modal title</h5>
                                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                        <span aria-hidden="true">&times;</span>
                                                    </button>
                                                </div>
                                                <div class="modal-body">
                                                    @Model.Venue @Model.EventDetail.ExactLocation
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                                    <button type="button" class="btn btn-primary">Save changes</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <!-- Button trigger modal -->
                                    <button type="button" class="btn btn-secondary" data-toggle="modal" data-target="#speaker-@Model.Id">
                                        Click for INFO
                                    </button>

                                    <!-- Modal -->
                                    <div class="modal fade" id="speaker-@Model.Id" tabindex="-1" role="dialog" aria-labelledby="speaker-@Model.Id" aria-hidden="true">
                                        <div class="modal-dialog modal-dialog-centered" role="document">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title" id="exampleModalLongTitle">Modal title</h5>
                                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                        <span aria-hidden="true">&times;</span>
                                                    </button>
                                                </div>
                                                <div class="modal-body">
                                                    @foreach (EventSpeaker es in Model.EventSpeakers)
                                                    {
                                                        <div class="row mt-5">
                                                            <div class="col-6">
                                                                @Html.Raw("<p>Speaker Name</p>")
                                                                <h3>@es.Speaker.Fullname</h3>
                                                                @Html.Raw("<p>Speaker Occupation</p>")
                                                                <h3>@es.Speaker.Occupation</h3>
                                                            </div>
                                                            <div class="col-6">
                                                                <img style="width: 140px; height: 140px; object-fit:cover" src="~/img/event/@es.Speaker.ImageUrl" a />
                                                            </div>
                                                        </div>
                                                    }
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                                    <button type="button" class="btn btn-primary">Save changes</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                </td>

                                <td>
                                    <a class="btn btn-warning" asp-action="Update" asp-route-id="@Model.Id">
                                        Edit
                                    </a>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


