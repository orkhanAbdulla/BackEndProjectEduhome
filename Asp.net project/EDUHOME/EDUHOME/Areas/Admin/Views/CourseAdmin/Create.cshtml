@model CourseVM
@{
    ViewData["Title"] = "Create";
}

<div class="row">
    <div class="col-12 grid-margin stretch-card">
        <div class="card ">
            <div class="card-body">
                <h4 class="card-title">Create Course</h4>
                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                <form class="forms-sample" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label asp-for="@Model.Course.Photo">Select Image:</label>
                        <input asp-for="@Model.Course.Photo" class="form-control" accept="image/*">
                        <span class="text-danger" asp-validation-for="@Model.Course.Photo"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Course.Name"></label>
                        <input asp-for="@Model.Course.Name" class="form-control" placeholder="Name">
                        <span class="text-danger" asp-validation-for="@Model.Course.Name"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Course.Description"></label>
                        <input asp-for="@Model.Course.Description" class="form-control" placeholder="Description">
                        <span class="text-danger" asp-validation-for="@Model.Course.Description"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.DetailCourse.AboutCourse"></label>
                        <input asp-for="@Model.DetailCourse.AboutCourse" class="form-control" placeholder="About course">
                        <span class="text-danger" asp-validation-for="@Model.DetailCourse.AboutCourse" placeholder="Price"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.DetailCourse.HowToApply"></label>
                        <input asp-for="@Model.DetailCourse.HowToApply" class="form-control" placeholder="How to apply">
                        <span class="text-danger" asp-validation-for="@Model.DetailCourse.HowToApply"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="@Model.DetailCourse.Certification"></label>
                        <textarea asp-for="@Model.DetailCourse.Certification" id="editor"></textarea>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.DetailCourse.Starts"></label>
                        <input asp-for="@Model.DetailCourse.Starts" class="form-control" placeholder="Starts">
                        <span class="text-danger" asp-validation-for="@Model.DetailCourse.Starts"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.DetailCourse.Duration"></label>
                        <input asp-for="@Model.DetailCourse.Duration" class="form-control" placeholder="Duration">
                        <span class="text-danger" asp-validation-for="@Model.DetailCourse.Duration"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.DetailCourse.ClassDuration"></label>
                        <input asp-for="@Model.DetailCourse.ClassDuration" class="form-control" placeholder="Class duration">
                        <span class="text-danger"asp-validation-for="@Model.DetailCourse.Price"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.DetailCourse.SkillLevel"></label>
                        <input asp-for="@Model.DetailCourse.SkillLevel" class="form-control" placeholder="Skill level">
                        <span class="text-danger" asp-validation-for="@Model.DetailCourse.SkillLevel"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.DetailCourse.Language"></label>
                        <input asp-for="@Model.DetailCourse.Language" class="form-control" placeholder="Language">
                        <span class="text-danger" asp-validation-for="@Model.DetailCourse.Language"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.DetailCourse.Students"></label>
                        <input asp-for="@Model.DetailCourse.Students" class="form-control" placeholder="Students">
                        <span class="text-danger" asp-validation-for="@Model.DetailCourse.Students"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.DetailCourse.Assesments"></label>
                        <input asp-for="@Model.DetailCourse.Assesments" class="form-control" placeholder="Assesments">
                        <span class="text-danger" asp-validation-for="@Model.DetailCourse.Assesments"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.DetailCourse.Price"></label>
                        <input asp-for="@Model.DetailCourse.Price" class="form-control" placeholder="Assesments">
                        <span class="text-danger" asp-validation-for="@Model.DetailCourse.Price"></span>
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Submit</button>
                    <a class="btn btn-light" asp-action="Index">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>
@section Script{
    <script src="https://cdn.ckeditor.com/ckeditor5/27.1.0/classic/ckeditor.js"></script>
    <script>
        ClassicEditor
            .create(document.querySelector('#editor'))
            .catch(error => {
                console.error(error);
            });
    </script>
    <partial name="_ValidationPartial" />

}



