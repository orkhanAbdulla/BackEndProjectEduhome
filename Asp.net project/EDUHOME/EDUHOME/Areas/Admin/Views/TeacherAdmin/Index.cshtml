@model List<Teacher>
@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card ">
        <div class="card ">
            <div class="card-body ">
                <h4 class="card-title">Teachers</h4>
                <a asp-controller="TeacherAdmin" asp-action="Create" class="btn btn-success">Create</a>
                <div class="table-responsive">
                    <table class="table table-striped ">
                        <thead>
                            <tr>
                                <th>
                                    Image
                                </th>
                                <th>
                                    Fullname
                                </th>
                                <th>
                                    Position
                                </th>
                                <th>
                                    About me
                                </th>
                                <th>
                                    Contact Information
                                </th>
                                <th>
                                    IsDeleted
                                </th>
                                <th>
                                    Settings
                                </th>

                            </tr>

                        </thead>
                        <tbody>
                            @foreach (Teacher t in Model)
                            {
                                <tr>
                                    <td>
                                        <img style="width: 100px; height: 100px; object-fit:cover" src="~/img/teacher/@t.ImageUrl" a />
                                    </td>
                                    <td>
                                        @t.Fullname
                                    </td>
                                    <td>
                                        @t.Position
                                    </td>
                                    <td>
                                        <!-- Button trigger modal -->
                                        <button type="button" class="btn btn-secondary" data-toggle="modal" data-target="#exampleModalLong-@t.Id">
                                            Click for Description
                                        </button>

                                        <!-- Modal -->
                                        <div class="modal fade" id="exampleModalLong-@t.Id" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle-@t.Id" aria-hidden="true">
                                            <div class="modal-dialog" role="document">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title" id="exampleModalLongTitle">Modal title</h5>
                                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                            <span aria-hidden="true">&times;</span>
                                                        </button>
                                                    </div>
                                                    <div class="modal-body">
                                                        <div class="teacher-details-content ml-50">
                                                            <h5>@t.TeacherDetail.AboutMe</h5>
                                                            <ul>
                                                                <li><span>degree: </span>@t.TeacherDetail.Degree</li>
                                                                <li><span>experience: </span>@t.TeacherDetail.Experience</li>
                                                                <li><span>hobbies: </span>@t.TeacherDetail.Hobbies</li>
                                                                <li><span>faculty: </span>@t.TeacherDetail.Faculty</li>
                                                            </ul>
                                                        </div>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                                        <button type="button" class="btn btn-primary">Save changes</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                       
                                    </td>
                                    <td>
                                        <!-- Button trigger modal -->
                                        <button type="button" class="btn btn-secondary" data-toggle="modal" data-target="#speaker-@t.Id">
                                            Contact INFO
                                        </button>

                                        <!-- Modal -->
                                        <div class="modal fade" id="speaker-@t.Id" tabindex="-1" role="dialog" aria-labelledby="speaker-@t.Id" aria-hidden="true">
                                            <div class="modal-dialog modal-dialog-centered" role="document">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title" id="exampleModalLongTitle">Modal title</h5>
                                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                            <span aria-hidden="true">&times;</span>
                                                        </button>
                                                    </div>
                                                    <div class="modal-body">
                                                        <h4>contact information</h4>
                                                        <p><span>mail me : </span>@t.TeacherDetail.MailMe</p>
                                                        <p><span>make a call : </span>@t.TeacherDetail.Call</p>
                                                        <p><span>skype : </span>@t.TeacherDetail.Skype</p>

                                                            @foreach (Social tc in t.socials)
                                                            {
                                                                <a class="icon-asd" href="@tc.Link"><i class="@tc.Icon"></i></a>
                                                            }
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                                        <button type="button" class="btn btn-primary">Save changes</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                    </td>

                                    @if (t.IsDeleted)
                                    {
                                        <td class="text-danger">
                                            Deactive
                                        </td>

                                    }
                                    else
                                    {
                                        <td class="text-success">
                                            Active
                                        </td>
                                    }
                                    <td>
                                        <a class="btn btn-info" asp-action="Detail" asp-route-id="@t.Id">
                                            Detail
                                        </a>

                                        <a class="btn btn-warning" asp-action="Update" asp-route-id="@t.Id">
                                            Edit
                                        </a>
                                        @if (t.IsDeleted)
                                        {
                                            <a class="btn btn-success" asp-action="Activity" asp-route-id="@t.Id">
                                                Activated
                                            </a>
                                        }
                                        else
                                        {
                                            <a class="btn btn-danger" asp-action="Activity" asp-route-id="@t.Id">
                                                Deactivated
                                            </a>
                                        }

                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>







