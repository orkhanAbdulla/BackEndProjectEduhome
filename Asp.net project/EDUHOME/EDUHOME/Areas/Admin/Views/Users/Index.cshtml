@model List<UserVM>
@{
    ViewData["Title"] = "Index";
}
<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Users</h4>
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>
                                    Fullname
                                </th>
                                <th>
                                    Username
                                </th>

                                <th>
                                    Email
                                </th>
                                <th>
                                    Role
                                </th>
                                <th>
                                    isDelete
                                </th>

                                <th>
                                    Setting
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (UserVM user in Model)
                            {
                                <tr>
                                    <td>
                                        @user.Name @user.Surname
                                    </td>
                                    <td>
                                        @user.UserName
                                    </td>
                                    <td>
                                        @user.Email
                                    </td>
                                    <td>
                                        @user.Role
                                    </td>
                                    @if (user.IsDeleted)
                                    {
                                        <td class="text-danger">
                                            Deactive
                                        </td>
                                    }
                                    else
                                    {
                                        <td class="text-success">
                                            Active
                                        </td>
                                    }
                                    @if (user.UserName != User.Identity.Name)
                                    {
                                        <td>
                                            <a class="btn btn-warning"  asp-action="ChangeRole" asp-route-id="@user.Id">
                                                ChangeRole
                                            </a>
                                            @if (user.IsDeleted)
                                            {
                                                <a class="btn btn-success"  asp-action="Activity" asp-route-id="@user.Id">
                                                    Activated
                                                </a>
                                            }
                                            else
                                            {
                                        <a class="btn btn-danger" asp-action="Activity" asp-route-id="@user.Id">
                                            Deactivated 
                                        </a>
                                            }

                                        </td>
                                    }

                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


