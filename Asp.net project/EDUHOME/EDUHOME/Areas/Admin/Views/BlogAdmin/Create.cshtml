@model Blog
@{
    ViewData["Title"] = "Create";
}
<div class="row">
    <div class="col-12 grid-margin stretch-card">
        <div class="card ">
            <div class="card-body">
                <h4 class="card-title">Blog Create</h4>
                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                <form class="forms-sample" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label asp-for="Photo"></label>
                        <input asp-for="Photo" class="form-control" placeholder="Photo" accept="image/*">
                        <span class="text-danger" asp-validation-for="Photo"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Tittle"></label>
                        <input asp-for="Tittle" class="form-control" placeholder="Tittle">
                        <span class="text-danger" asp-validation-for="Tittle"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="BlogDetail.Description"></label>
                        <textarea asp-for="BlogDetail.Description" id="#editor"></textarea>
                    </div>
                    <div class="form-group">
                        <label asp-for="Posted"></label>
                        <input asp-for="Posted" class="form-control" placeholder="Posted">
                        <span class="text-danger" asp-validation-for="Posted"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Author"></label>
                        <input asp-for="Author" class="form-control" placeholder="Author">
                        <span class="text-danger" asp-validation-for="Author"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Comment"></label>
                        <input asp-for="Comment" class="form-control" placeholder="Comment">
                        <span class="text-danger" asp-validation-for="Comment"></span>
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Submit</button>
                    <a class="btn btn-light" asp-action="Index">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>
@section Script{
    <script src="https://cdn.ckeditor.com/ckeditor5/27.1.0/classic/ckeditor.js"></script>
    <script>
        ClassicEditor
            .create(document.querySelector('#editor'))
            .catch(error => {
                console.error(error);
            });
    </script>
    <partial name="_ValidationPartial" />

}




