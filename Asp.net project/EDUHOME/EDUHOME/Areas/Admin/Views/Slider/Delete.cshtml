@model Slider
@{
    ViewData["Title"] = "Delete";
}

<div class="row">
    <div class="col-12">
        <div>
            <img src="~/img/slider/@Model.ImageUrl" class="img-fluid" alt="Alternate Text" />
        </div>
    </div>
    <div class="col-12 mt-3">
        <div class="mt-3">
            Title: @Model.Title
        </div>
        <div class="mt-3">
            TitleBottom: @Model.TitleBottom
        </div>
        <div class="mt-3">
            Description: @Model.Description
        </div>
        <div>
            <a asp-action="Index" class="my-3 btn btn-secondary">Go Back</a>
            <form method="post" class="text-center">
                <h4 class="text-danger text-center mb-3 ">Are you sure you want to remove this slider?</h4>
                <button type="submit" class="btn btn-danger">Delete</button>
            </form>
        </div>
    </div>
</div>

