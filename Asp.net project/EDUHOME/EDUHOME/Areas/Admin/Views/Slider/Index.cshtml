@model List<Slider>
@{
    ViewData["Title"] = "Index";
   
}

<div class="row">
    <div class="col-12 mb-3">
            <a asp-action="Create" class="btn btn-success">Create New Slider</a>
    </div>
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Sliders</h4>
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>
                                    Image
                                </th>
                                <th>
                                    Title
                                </th>
                                <th>
                                    TitleBottom
                                </th>
                                <th>
                                    Description
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                                @foreach (Slider slide in Model)
                                {
                            <tr>
                                <td>
                                    <img style="width: 120px; height: 115px; object-fit:cover" src="~/img/slider/@slide.ImageUrl">
                                </td>
                                <td>
                                    @slide.Title
                                </td>
                                <td>
                                    @slide.TitleBottom
                                </td>
                                <td>
                                    @slide.Description
                                </td>
                                <td>
                                  
                                    <a class="btn btn-warning" asp-action="Update" asp-route-id="@slide.Id">
                                        <i class="mdi mdi-table-edit"></i>
                                    </a>
                                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@slide.Id">
                                        <i class="mdi mdi-delete-sweep"></i>
                                    </a>
                                </td>
                            </tr>
                                }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>



